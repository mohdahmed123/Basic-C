// Online C compiler to run C program online
#include <stdio.h>

int main() {
    const float pi=3.14;
    float a,r,v;
    
    printf("enter radius of circle is= ");
    scanf("%f",&r);
    
    a=pi*r*r;
    v=(4/3)*r*r*r;
    
    printf("area is = %f",a);
    printf("\n");
    printf("volume is= %f",v);

    return 0;
}
